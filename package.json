{
  "name": "strickland-root",
  "private": true,
  "scripts": {
    "build": "cd strickland && npm run build",
    "demo": "cd demo && npm start",
    "updatedocs": "cp README.md strickland && cp CHANGELOG.md docs",
    "prepublish": "npm run build && npm run updatedocs",
    "release": "lerna publish --conventional-commits",
    "prerelease": "lerna publish --conventional-commits --cd-version=prerelease",
    "postinstall": "lerna bootstrap",
    "test": "lerna run test",
    "lint": "lerna run lint"
  },
  "devDependencies": {
    "lerna": "^2.5.1"
  }
}
